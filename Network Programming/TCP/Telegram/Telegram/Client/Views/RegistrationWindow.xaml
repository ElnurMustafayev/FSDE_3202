<UserControl x:Class="Client.Views.RegistrationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             mc:Ignorable="d" 
             Height="450" Width="800" Background="white">
    <StackPanel Margin="100">
        <DockPanel>
            <Label Content="Name"/>
            <TextBox Margin="5" Text="{Binding ClientName}"/>
        </DockPanel>
        <DockPanel>
            <Label Content="Chat ID"/>
            <TextBox Margin="5" Text="{Binding ChatId}"/>
        </DockPanel>
        <Button Margin="5" Content="Connect" Command="{Binding ConnectCommand}"/>
    </StackPanel>
</UserControl>
